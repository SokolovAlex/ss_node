extends ../../build/views/components/layout

block scripts
    script(src='js/bundle.js')

block styles

block menu
    +ss-menu(menu, true, 'Личный кабинет')

block body

    .rootContainer
        .container
            .profile
                .profile__email
                    label Адрес:
                    span= user.email

                .profile__firstName
                    label Имя:
                    span= user.fname

                .profile__lastName
                    label Фамилия:
                    span= user.lname

                .profile__birthdate
                    label Дата Рождения:
                    span= user.birthDate

                .profile__actions
                    each action in profileActions
                        a.profile__action(href=action.href)
                            span.fa(class=`fa-${action.icon}`)
                            .profile__action-text= action.text