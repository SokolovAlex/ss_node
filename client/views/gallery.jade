extends ../../build/views/components/layout

block scripts
    script(type="text/javascript" src='js/bundle.js')
    script(type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.6.0/slick.js")
    script(type="text/javascript" src='js/pages/gallery.js')

block styles
    link(rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/jquery.slick/1.6.0/slick.css")
    link(rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.6.0/slick-theme.min.css")

block menu
    +ss-menu(menu, true, title)

block body
    .rootContainer
        .container
            .row.gallery
                each item in images
                    .gallery__item
                        img.img-rounded(src=`/upload/` + folder + `/${item.name}`)
                        .gallery__description= item.description

            .gallery__line

            .row.gallery__previews
                h3= title_all
                each item, i in images
                    .gallery__thumbnail.col-sm-6.col-md-4.col-lg-2(data-id=`${item.id}` data-index=`${i}`)
                        img.img-thumbnail(src=`/upload/` + folder + `/${item.name}`)